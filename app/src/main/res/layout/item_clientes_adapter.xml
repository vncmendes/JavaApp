<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNomeItemAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="40dp"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Nome" />

            <ImageView
                android:id="@+id/imgItemAdapter"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="114dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="114dp"
                android:layout_marginTop="5dp"
                android:foregroundGravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvCodigoItemAdapter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused" />

            <TextView
                android:id="@+id/tvCpfItemAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginTop="5dp"
                android:text="TextView"
                app:layout_constraintBottom_toTopOf="@+id/tvCodigoItemAdapter"
                app:layout_constraintEnd_toEndOf="@+id/tvCodigoItemAdapter"
                app:layout_constraintStart_toStartOf="@+id/tvCodigoItemAdapter"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="CPF" />

            <TextView
                android:id="@+id/tvCodigoItemAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgItemAdapter"
                app:layout_constraintTop_toBottomOf="@+id/tvCpfItemAdapter"
                tools:text="Codigo" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>